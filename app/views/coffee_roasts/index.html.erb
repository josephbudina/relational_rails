<h1>Coffee Roasts</h1>
<%= link_to "Coffee Company Index", "/coffee_companies" %></br>
<% @roasts.each do |roast| %>
<h3><%= link_to "#{roast.name}", "/coffee_roasts/#{roast.id}" %></h3>
<p><%= button_to 'Update', "/coffee_roasts/#{roast.id}/edit", method: :get %></p>
<p><%= button_to 'Delete', "/coffee_roasts/#{roast.id}", method: :delete%></p>
<% end %>

<% if @roasts.empty? %>
<h3> No Coffee Roasts!</h3>
<% end %>
