<form action="/coffee_roast/<%= @roast.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h2>Edit</h2>
  <p>Name:</p>
  <input type='text' name='roast[name]' value="<%= @roast.name %>"/><br/>
  <p>Company:</p>
  <select name="company" id="company">
  <% CoffeeCompany.all.each do |company| %>
  <option value="<%= company.id %>"><%= company.name %></option>
  <% end %>
  </select>
  <p>Origin:</p>
  <textarea name='roast[origin]'><%= @roast.origin %></textarea><br/>
  <p>Elevation:</p>
  <input type='text' name='roast[elevation]' value="<%= @roast.elevation %>"/><br/>
  <p>
    <label for="fresh">Fresh?</label>
    <input type='checkbox' name='roast[fresh]' <%= @roast.fresh ? 'checked' : '' %>/><br/>
  </p>
  <input type='submit'/>
</form>
